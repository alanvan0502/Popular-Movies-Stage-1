<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/movie_detail_layout"
        android:visibility="invisible"
        tools:context=".MovieDetailActivity">
        <TextView
            android:id="@+id/detail_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:background="@color/colorLight"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <ImageView
                android:id="@+id/detail_poster_iv"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@mipmap/ic_movie_placeholder"
                android:contentDescription="@string/detail_poster"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/release_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_margin"
                    android:textSize="@dimen/release_date_text_size"
                    android:text="@string/no_data"/>
                <TextView
                    android:id="@+id/movie_duration_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_margin"
                    android:textStyle="bold|italic"
                    android:textSize="@dimen/duration_text_size"
                    android:text="@string/no_data"/>
                <TextView
                    android:id="@+id/rating_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_margin"
                    android:text="@string/no_data"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mark_as_favorite_button_text"
                    android:textColor="@android:color/white"
                    android:onClick="markFavorite"
                    android:layout_margin="@dimen/detail_margin"
                    android:background="@color/colorLight"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/synopsis"
            android:textStyle="bold"/>
        <TextView
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:id="@+id/synopsis_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_data"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_loading_indicator_detail"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</FrameLayout>
